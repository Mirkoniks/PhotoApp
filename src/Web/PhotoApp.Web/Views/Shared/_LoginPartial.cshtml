@using Microsoft.AspNetCore.Identity
@using PhotoApp.Data.Models
@inject SignInManager<PhotoAppUser> SignInManager
@inject UserManager<PhotoAppUser> UserManager

<ul">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="dropdown">
            <a id="navbarDropdownMenuLink">
                @UserManager.GetUserAsync(User).Result.UserName
            </a>
            <ul aria-labelledby="navbarDropdownMenuLink">
                <li>

                <a asp-area="" asp-controller="User" asp-action="MyPhotos">My photos</a>
                </li>
                <li>

                <a asp-area="" asp-controller="User" asp-action="LikedPhotos">Liked photos</a>
                </li>
                <li>

                </li>
                <hr />
                <li>

                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Settings</a>
                </li>
            </ul>
        </li>

        <li >
            
        </li>
        <li>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
