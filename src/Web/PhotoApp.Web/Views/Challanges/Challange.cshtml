        //        document.getElementById(id).classList.remove('btn-success');
        //        document.getElementById(id).classList.add('btn-danger');

        //        doc = document.getElementById(id);

        //        doc.innerHTML = "<i class=\"fas fa-thumbs-up\"></i> Like";

        //        addLike(id);
        //    }
        //}

        function report(id) {
            document.getElementById(id).disabled = true;

            realId = id.substring(0, id.length - 2);


            var info =
            {
                photoId: realId
            };

            $.ajax({
                type: 'POST',
                url: "https://localhost:44371/Api/AddReport",
                data: info,
                dataType: "text",
            });

        }

        function like(id) {
            if (likes.indexOf(id) === -1) {
                likes.push(id);

                document.getElementById(id).classList.remove('btn-danger');
                document.getElementById(id).classList.add('btn-success');

                addLike(id);
            }
            else {
                let index = likes.indexOf(id);
                delete likes[index];

                document.getElementById(id).classList.remove('btn-success');
                document.getElementById(id).classList.add('btn-danger');

                removeLike(id);
            }

            likes = likes.filter(function (el) {
                return el != null && el != '';
            });

        }

        </script>
    }
