        //NEW METHODS FOR LOADING

        connection.on("GetPhotosNew",
            function (model) {

                if ($('#rate').prop('disabled')) {

                    //$("#photoBox").append("<div id=\"loader\" class=\"d-flex justify-content-center\"><div class=\"spinner-border\" style=\"width: 10rem; height: 10rem;\" role=\"status\"><span class=\"sr-only\">Loading...</span></div></div>");

                    "<div id=\"loader\" class=\"d-flex justify-content-center\"><div class=\"spinner-border\" style=\"width: 10rem; height: 10rem;\" role=\"status\"><span class=\"sr-only\">Loading...</span></div></div>"

                    morePhotos = model.expectMorePhotos;
                    actualPhotosPacket += model.actualPhotosCount;

                    var i;

                        for (i = 0; i < model.photos.length; i++) {
                            $(".card-columns").append(`<div class="col-xl-3 col-lg-4 col-md-6 mb-4"><div class="bg-white rounded shadow-sm"><img src="${model.photos[i].photoLink}"alt="" class="img-fluid card-img-top"><div class="p-4"><div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4"><p class="small mb-0"><i class="fa fa-picture-o mr-2"></i><button id="${model.photos[i].photoId}-r" class="btn btn-warning rounded-pill text-light" onclick="report(this.id)" ><i class="fas fa-exclamation-triangle"></i> Report</button></p><div><button id="${model.photos[i].photoId}" class="btn btn-danger rounded-pill text-light" type="submit" onclick="like(this.id)" > <i class="fas fa-thumbs-up"></i> Like</button></div></div></div></div></div>`)

                            PhotosSend++;
                        }


                }

            }
        );

        $("#rate").click(function () {

            var loadInfo =
            {
                totalPhotos: 0,
                photosSend: PhotosSend,
                challangeId: @Model.Id,
                userId: uid1,
                actualPhotosCount: actualPhotosPacket
            };

            connection.invoke("LoadPhotosNew", loadInfo);
        }
        );


        $(window).on("scroll", function () {

            if (morePhotos) {
                if ($('#rate').prop('disabled')) {
                    if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {

                        var loadInfo =
                        {
                            totalPhotos: 0,
                            photosSend: PhotosSend,
                            challangeId: @Model.Id,
                            userId: uid1,
                            actualPhotosCount: actualPhotosPacket
                        };

                        connection.invoke("LoadPhotosNew", loadInfo);
                    }
                }
            }
        });


        connection.start();



        function addLike(id) {

            var uid = document.getElementById("userId").textContent;
            var chid = document.getElementById("challangeId").textContent;

            document.getElementById(id).innerHTML = "Liked";

            var likeInfo =
            {
                photoId: id,
                userId: uid,
                challangeId: chid,
            };

            $.ajax({
                type: 'POST',
                url: "https://localhost:44371/Api/AddLike",
                data: likeInfo,
                dataType: "text",
            });
        }


        function removeLike(id) {

            var uid = document.getElementById("userId").textContent;
            var chid = document.getElementById("challangeId").textContent;

            document.getElementById(id).innerHTML = "Like";


            var likeInfo =
            {
                photoId: id,
                userId: uid,
                challangeId: chid,
            };

            $.ajax({
                type: 'DELETE',
                url: "https://localhost:44371/Api/RemoveLike",
                data: likeInfo,
                dataType: "text",
            });
        }

