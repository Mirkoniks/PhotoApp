@model PhotoApp.Web.Areas.Admin.Models.EditUserViewModel

<div class="col-xl-12">
    <div class="card spur-card">
        <div class="card-header">
            <div class="spur-card-icon">
                <i class="fas fa-chart-bar"></i>
            </div>
            <div class="spur-card-title"> Edit </div>
        </div>
        <div class="card-body ">
            <form asp-area="Admin" asp-controller="Roles" asp-action="Edit">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CreatedOn"></label>
                        <input asp-for="CreatedOn" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Birthday"></label>
                        <input asp-for="Birthday" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-4">
                        <div class="custom-control custom-radio">
                            <input asp-for="IsMember" class="custom-control-input">
                            <label asp-for="IsMember" class="custom-control-label"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="custom-control custom-radio">
                            <input asp-for="IsModerator" class="custom-control-input">
                            <label asp-for="IsModerator" class="custom-control-label"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="custom-control custom-radio">
                            <input asp-for="IsAdmin" class="custom-control-input">
                            <label asp-for="IsAdmin" class="custom-control-label"></label>
                        </div>
                    </div>
                </div>

                <input asp-for="Id" value="@Model.Id" hidden />

                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>