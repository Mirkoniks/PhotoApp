@model PhotoApp.Web.Areas.Admin.Models.ReportViewModel

<div class="col-xl-12">
    <div class="card spur-card">
        <div class="card-header">
            <div class="spur-card-icon">
                <i class="fas fa-chart-bar"></i>
            </div>
            <div class="spur-card-title"> Report from @Model.ReportedOn </div>
        </div>
        <div class="card-body ">
            <form>
                <div class="form-row mb-3">
                    <img class="img-thumbnail" src="https://www.iekakmi-roadtrips.gr/plugins/fullpage/examples/imgs/bg2.jpg" alt="">
                </div>
                <div class="form-row pl-1">
                    <h3>Description</h3>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="alert alert-danger" role="alert"> @Model.Description </div>
                    </div>
                </div>
                <input hidden asp-for="@Model.Id" />
                <div class="form-row text-center">
                    <div class="col-md-6 align-middle">
                        <button type="submit" class="btn btn-danger">Delete photo</button>
                    </div>
                    <div class="col-md-6 text-center">
                        <button type="submit" class="btn btn-success">Leave photo</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>